{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "no-var": "error",
        "no-console": "warn",
        "no-useless-escape": "error",
        "no-useless-return": "error",
        
        "comma-spacing": [
            "error",
            { "before": false, "after": true}
        ],
        "keyword-spacing": [
            "warn",
            { "before": true, "after": true}
        ],

        "react/button-has-type": "warn",
        "react/prop-types": "off"
    }
}